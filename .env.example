# Core
PORT=3000
DB_PATH=./data/assistant.db

# Auth (use ONE of these)
JWT_SECRET=dev-secret-change-me
# JWT_SECRETS=dev-secret-new,dev-secret-old

# Embeddings (production default = Google)
# If provider/model changes, reindex to keep vectors consistent: npm run reindex
EMBEDDING_PROVIDER=google
GOOGLE_API_KEY=
GOOGLE_EMBEDDING_MODEL=text-embedding-004

# Local fallback (dev/offline)
# EMBEDDING_PROVIDER=local

# Rate limiting
RATE_LIMIT_STORE=db
# RATE_LIMIT_STORE=memory

# Optional flags
ALLOW_LEGACY_HEADERS=false
# FORCE_RESET=true
