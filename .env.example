# Core
PORT=3000
DB_PATH=./data/assistant.db

# Auth (use ONE of these)
JWT_SECRET=dev-secret-change-me
# JWT_SECRETS=dev-secret-new,dev-secret-old

# Embeddings (production default = Google)
# If provider/model changes, reindex to keep vectors consistent: npm run reindex
EMBEDDING_PROVIDER=google
GOOGLE_API_KEY=
GOOGLE_EMBEDDING_MODEL=text-embedding-004

# Local fallback (dev/offline)
# EMBEDDING_PROVIDER=local

# Chat assistant (realtime)
# Uses Google when GOOGLE_API_KEY exists, otherwise local assistant fallback.
# CHAT_ASSISTANT_PROVIDER=google
# GOOGLE_CHAT_MODEL=gemini-1.5-flash

# Rate limiting
RATE_LIMIT_STORE=db
# RATE_LIMIT_STORE=memory
TRUST_PROXY=false
RATE_LIMIT_GLOBAL_MAX=600
RATE_LIMIT_GLOBAL_WINDOW_MS=60000
RATE_LIMIT_AUTH_LOGIN_IP_MAX=10
RATE_LIMIT_AUTH_LOGIN_EMAIL_MAX=8
RATE_LIMIT_AUTH_LOGIN_WINDOW_MS=60000

# Optional flags
ALLOW_LEGACY_HEADERS=false
# FORCE_RESET=true
