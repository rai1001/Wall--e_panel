{
  "name": "wall-e-panel",
  "version": "0.1.0",
  "description": "Asistente modular Day 1 MVP",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "smoke": "tsx scripts/smoke-day1.ts",
    "typecheck": "tsc --noEmit",
    "ci": "npm run typecheck && npm test && npm run smoke",
    "backup": "tsx scripts/db-backup.ts",
    "restore": "tsx scripts/db-restore.ts",
    "reindex": "tsx scripts/reindex-memory.ts",
    "reset:local": "tsx scripts/reset-local.ts"
  },
  "keywords": [
    "assistant",
    "modular",
    "rbac",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.3",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
